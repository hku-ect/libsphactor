<project script = "zproject.gsl"
    name = "libsphactor"
    prefix = "sphactor"
    description = "Extended nodal actor framework based on zactor"
    email = "arnaud@sphaero.org"
    license = "MPLv2"
    url = "https://github.com/sphaero/sphactor"
    repository = "https://github.com/sphaero/sphactor"
    unique_class_name = "0"
    >
    <include filename = "license.xml" />
    <version major = "0" minor = "1" patch = "0" />
    <use project = "czmq" />

    <class name = "sphactor" />
